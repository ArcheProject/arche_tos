<tal:main
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      i18n:domain="arche_tos">
  
  <dl tal:define="consent_managers tuple(view.tos_manager.get_consent_managers());
                  data_controller view.tos_manager.get_data_controller();">
    <dt i18n:translate="">Data Controller</dt>
    <dd tal:condition="data_controller">${data_controller}</dd>
    <dd tal:condition="not data_controller">
        <i i18n:translate="">No data controller set for this site</i>
    </dd>
</dl>

</tal:main>
